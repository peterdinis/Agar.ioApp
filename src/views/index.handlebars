<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agar.io Clone with Pixi.js</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/7.2.4/pixi.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div x-data="{
    gameStarted: false,
    gameOver: false,
    playerName: '',
    currentPlayer: null,
    playerCount: 0,
    leaderboard: [],
    finalMass: 0,
    finalPosition: 0,
    eatenBy: '',
    
    startGame() {
      if (window.gameApp) {
        window.gameApp.playerName = this.playerName;
        window.gameApp.startGame();
        this.gameStarted = true;
        this.gameOver = false;
      }
    },
    
    restartGame() {
      if (window.gameApp) {
        window.gameApp.restartGame();
        this.gameStarted = true;
        this.gameOver = false;
      }
    },
    
    backToMenu() {
      if (window.gameApp) {
        window.gameApp.backToMenu();
        this.gameStarted = false;
        this.gameOver = false;
      }
    }
  }" x-init="
    // Listen for game state changes
    if (window.gameApp) {
      // You could set up observers here for game state changes
    }
  ">
    <div x-show="!gameStarted && !gameOver" class="menu-screen">
      <div class="menu-container">
        <h1 class="game-title">Agar.io Clone with Pixi.js</h1>
        <div class="mb-3">
          <input 
            type="text" 
            class="form-control form-control-lg" 
            placeholder="Enter your name"
            x-model="playerName"
            @keyup.enter="startGame()"
            maxlength="15">
        </div>
        <button 
          class="btn btn-primary btn-lg"
          @click="startGame()">
          Play
        </button>
      </div>
    </div>

    <div x-show="gameStarted && !gameOver" class="game-screen">
      <div class="hud">
        <div class="stats">
          <div class="stat-item">
            <strong>Mass:</strong> <span x-text="Math.floor(currentPlayer?.mass || 0)"></span>
          </div>
          <div class="stat-item">
            <strong>Players:</strong> <span x-text="playerCount"></span>
          </div>
        </div>
        <div class="leaderboard">
          <h5>Leaderboard</h5>
          <div class="leaderboard-items">
            <template x-for="(player, idx) in leaderboard" :key="player.id">
              <div class="leaderboard-item" :class="{ 'current-player': player.id === currentPlayer?.id }">
                <span class="leaderboard-name" x-text="`${idx + 1}. ${player.name}`"></span>
                <span class="leaderboard-mass" x-text="Math.floor(player.mass)"></span>
              </div>
            </template>
          </div>
        </div>
      </div>

      <div id="gameCanvasContainer"></div>
    </div>
    
    <div x-show="gameOver" class="game-over-screen">
      <div class="game-over-container">
        <div class="game-over-card">
          <h1 class="game-over-title">Game Over!</h1>
          <div class="game-over-stats">
            <div class="stat">
              <span class="stat-label">Final Mass:</span>
              <span class="stat-value" x-text="Math.floor(finalMass)"></span>
            </div>
            <div class="stat">
              <span class="stat-label">Position:</span>
              <span class="stat-value" x-text="finalPosition"></span>
            </div>
            <div class="stat">
              <span class="stat-label">Eaten by:</span>
              <span class="stat-value" x-text="eatenBy || 'Unknown'"></span>
            </div>
          </div>
          <div class="game-over-actions">
            <button class="btn btn-primary btn-lg" @click="restartGame()">
              Play Again
            </button>
            <button class="btn btn-outline-secondary btn-lg" @click="backToMenu()">
              Main Menu
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="module" src="/js/game.js"></script>
</body>
</html>